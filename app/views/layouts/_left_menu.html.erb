<form class="smartform">
    <div class="form-group-container">
      <header>Niveau d'enseignement</header>
      <% Grade.all.each do |grade| -%>
        <div class="checkbox">
          <label>
            <input type="checkbox"> <%= grade.name -%>
          </label>
        </div>  
      <% end -%>
    </div>

    <div class="form-group-container">
      <header>Ordre d'enseignement</header>
      <% Category.all.each do |category| -%>
        <div class="checkbox">
          <label>
            <input type="checkbox"> <%= category.name -%>
          </label>
        </div>  
      <% end -%>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Search</button>
  </form>