<%# encoding: utf-8 %>

(function() {

  <%# update breadcrumb -%>
  $("#ribbon").html("<%= escape_javascript(render partial: 'shared/breadcrumb') %>")

  <%# update custom input -%>
  $("#custom-input").html("<%= escape_javascript(render partial: 'shared/city_id_param') -%>")

  <%# Clear the original highlighted area %>
  if(currentAreaPolygon !== undefined) {
    currentAreaPolygon.setMap(null);
  }
  <%# hide provinces data -%>
  if($currentData !== undefined) {
    $currentData.setMap(null);
  }

  <%# set highlighted area only to the selected province -%>
  var wholeWorld = [
    new google.maps.LatLng(-180, -90),
    new google.maps.LatLng(-180, 90),
    new google.maps.LatLng(180, 90),
    new google.maps.LatLng(180, -90)
  ];

  var cityArea = [wholeWorld];

  <% @city.geom.each do |polygon| %>
    cityArea.push(<%= polygon_to_gmap_points_array polygon -%>);
  <% end %>

  currentAreaPolygon = new google.maps.Polygon({
    paths: cityArea,
    strokeColor: "#000000",
    strokeOpacity: 0.8,
    strokeWeight: 2,
    fillColor: "#ffffff",
    fillOpacity: 1
  });
  currentAreaPolygon.setMap($map);

  <%# set currentData to the current city %>
  $currentData = new google.maps.Data();
  $currentAreaType = 'city';
  $currentData.loadGeoJson("<%= province_city_path @province, @city, format: :json %>");

  $currentData.setStyle(function(feature) {
      return { fillColor: 'blue',
              strokeWeight: 1};
    });

  initEventListenersForData($currentData);

  $currentData.setMap($map);

  var center = new google.maps.LatLng(<%= @city.center_point.y -%>, <%= @city.center_point.x -%>);
  $map.setCenter(center);
  $map.set('zoom', 9);

  <%# load schools of the city -%>
  var cityId = <%= @city.id -%>;
  $.getScript("/cities/" + cityId + "/schools.js?" + $("#search-schools").serialize());
})();